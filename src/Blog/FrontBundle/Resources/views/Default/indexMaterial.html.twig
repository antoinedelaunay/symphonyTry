{% endblock %}

{% block body %}
    <div class="container">
        <h3> Bienvenue {{titre}}</h3>

        {% if articles|length <= 0 %}
            <p> le tableau est vide, on ne l'affiche pas </p>    
        {% else %}
            <table class="centered bordered responsive-table highlight">
                <thead>
                    <tr>
                        <th data-field="Titre">Titre</th>
                        <th data-field="auteur">auteur</th> 
                        <th data-field="date">date</th> 
                        <th data-field="contenu_texte">contenu texte</th>
                    </tr>
                </thead>

                <tbody>
                    {% for position,article in articles %}
                        <tr>
                            <td><a class="nolink" href="{{url('blog_view' , {'id' : article.getId()})}}"><div style="height:100%;width:100%"> {{article.getTitre()|title}}</div></a></td>
                            <td><a class="nolink" href="{{url('blog_view' , {'id' : article.getId()})}}"><div style="height:100%;width:100%"> {{article.getAuteur()|upper}}</div></a></td>
                            <td><a class="nolink" href="{{url('blog_view' , {'id' : article.getId()})}}"><div style="height:100%;width:100%"> {{article.getDate()|capitalize}}</div></a></td>                
                            <td><a class="nolink" href="{{url('blog_view' , {'id' : article.getId()})}}"><div style="height:100%;width:100%"> {{article.getContenu_texte()|escape('html')}}</div></a></td>
                            <td><a class="nolink" href="{{url('blog_view' , {'id' : article.getId()})}}"><div style="height:100%;width:100%; text-align: center"> <i class="material-icons prefix">search</i></div></a></td>
